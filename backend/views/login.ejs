<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign in & Sign up Form</title>
    <link rel="stylesheet" href="/style/style.css" />
 
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main>
      <div class="box">
        <div class="inner-box">
          <div class="forms-wrap">
            <!-- Login Form -->
            <form action="/login" method="post" class="sign-in-form">
              <div class="logo">
                <h4>EduFlex</h4>
              </div>

              <div class="heading">
                <h2>Welcome Back!!</h2>
                <h6>Not registered yet?</h6>
                <a href="#" class="toggle">Sign up</a>
              </div>

              <div class="actual-form">
                <div class="input-wrap">
                  <input
                    id="userUsername"
                    name="userUsername"
                    type="text"
                    minlength="7"
                    class="input-field"
                    autocomplete="off"
                    required
                  />
                  <label>Username</label>
                </div>

                <div class="input-wrap">
                  <input
                    id="userPwd"
                    name="userPwd"
                    type="password"
                    minlength="8"
                    class="input-field"
                    autocomplete="off"
                    required
                  />
                  <label>Password</label>
                </div>

                <input type="submit" value="Sign In" class="sign-btn" />
              </div>
              <p class="text">
                Forgotten your password or your login details?
                <a href="/forgotpassword">Get help</a> signing in
              </p>
            </form>

            <!-- Sign Up Form -->
            <form action="/register" method="post" autocomplete="off" class="sign-up-form">
              <div class="logo">
                <h4>EduFlex</h4>
              </div>

              <div class="heading">
                <h2>Get Started</h2>
                <h6>Already have an account?</h6>
                <a href="#" class="toggle">Sign in</a>
              </div>

              <div class="actual-form">
                <div class="input-wrap">
                  <input
                    id="userUsername"
                    name="reguserUsername"
                    type="text"
                    minlength="7"
                    class="input-field"
                    autocomplete="off"
                    required
                  />
                  <label>Username</label>
                </div>

                <div class="input-wrap">
                  <input
                    id="emailInput"
                    name="email"
                    type="email"
                    class="input-field"
                    autocomplete="off"
                    required
                  />
                  <label>Email</label>
                </div>

                <div class="input-wrap">
                  <input
                    id="passwordInput"
                    name="reguserPwd"
                    type="password"
                    minlength="8"
                    class="input-field"
                    autocomplete="off"
                    required
                  />
                  <label>Enter Password</label>
                </div>

                <div class="input-wrap">
                  <input
                    id="confirmPasswordInput"
                    name="confuserPwd"
                    type="password"
                    minlength="8"
                    class="input-field"
                    autocomplete="off"
                    required
                  />
                  <label>Confirm Password</label>
                </div>
                <input type="hidden" name="interface" value="Webapp" />

                <input type="submit" value="Sign Up" class="sign-btn" />

                <p class="text">
                  By signing up, I agree to the
                  <a href="#">Terms of Services</a> and
                  <a href="#">Privacy Policy</a>
                </p>
              </div>
            </form>
          </div>

          <!-- Carousel Section -->
          <div class="carousel">
            <div class="images-wrapper">
              <img src="./img/image1.svg" class="image img-1 show" alt="" />
              <img src="./img/image2.svg" class="image img-2" alt="" />
            </div>

            <div class="text-slider">
              <div class="text-wrap">
                <div class="text-group">
                  <h2>Comprehensive student achivements</h2>
                  <h2>Enhanced profile building</h2>
                </div>
              </div>

              <div class="bullets">
                <span class="active" data-value="1"></span>
                <span data-value="2"></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <!-- Javascript file -->
    <script>
      const inputs = document.querySelectorAll(".input-field");
      const toggle_btns = document.querySelectorAll(".toggle");
      const main = document.querySelector("main");
      const bullets = document.querySelectorAll(".bullets span");
      const images = document.querySelectorAll(".image");
      const textSlider = document.querySelector(".text-group");

      // Handle input focus and blur
      inputs.forEach((inp) => {
        inp.addEventListener("focus", () => {
          inp.classList.add("active");
        });
        inp.addEventListener("blur", () => {
          if (inp.value != "") return;
          inp.classList.remove("active");
        });
      });

      // Toggle between Sign In and Sign Up
      toggle_btns.forEach((btn) => {
        btn.addEventListener("click", () => {
          main.classList.toggle("sign-up-mode");
        });
      });

      // Handle carousel image and text slide transitions
      function moveSlider() {
        let index = this.dataset.value;

        // Image transition
        let currentImage = document.querySelector(`.img-${index}`);
        images.forEach((img) => img.classList.remove("show"));
        currentImage.classList.add("show");

        // Text transition
        textSlider.style.transform = `translateY(${-(index - 1) * 2.2}rem)`;

        // Bullet indicator transition
        bullets.forEach((bull) => bull.classList.remove("active"));
        this.classList.add("active");
      }

      // Attach slider functionality to bullets
      bullets.forEach((bullet) => {
        bullet.addEventListener("click", moveSlider);
      });
    </script>
  </body>
</html>
