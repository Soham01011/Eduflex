                                      />
                                  </div>
                      
                                  <div class="mb-3 col-md-6">
                                      <label class="form-label" for="academic_year">Year</label>
                                      <select id="academic_year" name="academicyear" class="select2 form-select">
                                          <option value="">Select</option>
                                          <option value="First Year" <%= userProfile.academic_year === 'First Year' ? 'selected' : '' %>>First Year</option>
                                          <option value="Second Year" <%= userProfile.academic_year === 'Second Year' ? 'selected' : '' %>>Second Year</option>
                                          <option value="Third Year" <%= userProfile.academic_year === 'Third Year' ? 'selected' : '' %>>Third Year</option>
                                          <option value="Final Year" <%= userProfile.academic_year === 'Final Year' ? 'selected' : '' %>>Fourth Year</option>
                                          <option value="Alumni" <%= userProfile.academic_year === 'Alumni' ? 'selected' : '' %>>Alumni</option>
                                      </select>
                                  </div>
                      
                                  <div class="mb-3 col-md-6">
                                      <label class="form-label" for="semester">Semester</label>
                                      <select id="semester" name="semester" class="select2 form-select">
                                          <option value="">Select</option>
                                          <option value="Sem 1" <%= userProfile.semester === 'Sem 1' ? 'selected' : '' %>>Semester I</option>
                                          <option value="Sem 2" <%= userProfile.semester === 'Sem 2' ? 'selected' : '' %>>Semester II</option>
                                          <option value="Sem 3" <%= userProfile.semester === 'Sem 3' ? 'selected' : '' %>>Semester III</option>
                                          <option value="Sem 4" <%= userProfile.semester === 'Sem 4' ? 'selected' : '' %>>Semester IV</option>
                                          <option value="Sem 5" <%= userProfile.semester === 'Sem 5' ? 'selected' : '' %>>Semester V</option>
                                          <option value="Sem 6" <%= userProfile.semester === 'Sem 6' ? 'selected' : '' %>>Semester VI</option>
                                          <option value="Sem 7" <%= userProfile.semester === 'Sem 7' ? 'selected' : '' %>>Semester VII</option>
                                          <option value="Sem 8" <%= userProfile.semester === 'Sem 8' ? 'selected' : '' %>>Semester VIII</option>
                                          <option value="Alumni" <%= userProfile.semester === 'Alumni' ? 'selected' : '' %>>Alumni</option>
                                      </select>
                                  </div>
                      
                                  <div class="mb-3 col-md-6">
                                      <label for="github" class="form-label">GitHub</label>
                                      <input
                                          type="text"
                                          class="form-control"
                                          id="github"
                                          name="github"
                                          placeholder="Enter Your GitHub Link"
                                          value="<%= userProfile.github || '' %>"
                                      />
                                  </div>
                      
                                  <div class="mb-3 col-md-6">
                                      <label for="credly" class="form-label">Credly</label>
                                      <input
                                          type="text"
                                          class="form-control"
                                          id="credly"
                                          name="credly"
                                          placeholder="Enter Your Credly Link"
                                          value="<%= userProfile.link || '' %>"
                                      />
                                  </div>
                      
                              </div>
                          </div>
                      </form>
                      
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="content-backdrop fade"></div>
            </div>
