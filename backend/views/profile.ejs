                                  </div>
                      
                                  <div class="mb-3 col-md-6">
                                      <label for="bio" class="form-label">Bio</label>
                                      <input
                                          class="form-control"
                                          type="text"
                                          id="bio"
                                          name="bio"
                                          placeholder="Bio"
                                          value="<%= userProfile.bio || '' %>"
                                      />
                                  </div>
                      
                                  <div class="mb-3 col-md-6">
                                      <label for="hobby" class="form-label">Hobby</label>
                                      <input
                                          type="text"
                                          class="form-control"
                                          id="hobby"
                                          name="hobby"
                                          placeholder="Hobby"
                                          value="<%= userProfile.hobby || '' %>"
                                      />
                                  </div>
                      
