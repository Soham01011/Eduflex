<script>
  document.addEventListener("DOMContentLoaded", function () {
    const skillsInput = document.getElementById("skills_input");
    const projectsSection = document.getElementById("select-section");
    const skillsSection = document.getElementById("skills-section");

    function toggleSections() {
      if (skillsInput.value.trim() !== "") {
        projectsSection.style.display = "block";
        skillsSection.style.display = "none";
      } else {
        projectsSection.style.display = "none";
        skillsSection.style.display = "block";
      }
    }

    skillsInput.addEventListener("input", toggleSections);
    toggleSections(); // Initialize the state on page load
  });
</script>

