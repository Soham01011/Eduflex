            <!-- JavaScript to handle file selection and hashtag extraction -->
            <script>
              // Populate tags based on selected certificate type
              document.getElementById('cert_type').addEventListener('change', function (event) {
                const selectedType = event.target.value; // Get the selected cert type
                const tagContainer = document.getElementById('tag-container');
                tagContainer.innerHTML = ""; // Clear any existing tags

                let tags = [];
                if (selectedType === 'academic') {
                  tags = ['Entry/Foundation', 'Intermediate', 'Global/Industry Specific'];
                } else if (selectedType === 'experience') {
                  tags = ['Internship', 'Job', 'Entrepreneurship'];
                } else if (selectedType === 'extra') {
                  tags = ['Sports', 'Creative Arts', 'Hackathon', 'Seminar', 'Host'];
                }

                // Display the tags in the UI
                tags.forEach(tag => {
                  const tagElement = document.createElement('div');
                  tagElement.classList.add('tag');
                  tagElement.textContent = tag;
                  tagContainer.appendChild(tagElement);

                  // Add click functionality to select/deselect the tag
                  tagElement.addEventListener('click', () => {
                    // Deselect other tags when one is selected
                    document.querySelectorAll('.tag.selected').forEach(selectedTag => {
                      selectedTag.classList.remove('selected');
                    });
                    tagElement.classList.toggle('selected');
                  });
                });
              });

              // Handle form submission
              document.getElementById('upload-form').addEventListener('submit', async function (event) {
                event.preventDefault(); // Prevent default form submission

                // Collect the selected tag
                const selectedTag = document.querySelector('.tag.selected');
                if (!selectedTag) {
                  alert("Please select a tag.");
                  return;
                }
                const selection = selectedTag.textContent; // Get the selected tag value

                // Collect form values
                const description = document.getElementById('post_name').value;
                const organization = document.getElementById('post_org').value;
                const credentialId = document.getElementById('post_cred_id').value;
                const credentialUrl = document.getElementById('post_cred_url').value;
                const startTime = document.getElementById('startTime').value;
                const endTime = document.getElementById('endTime').value;
                const cert_type = document.getElementById('cert_type').value;
                const fileInput = document.getElementById('file');
                const file = fileInput.files[0];

                // Ensure required fields are filled
                if (!description || !organization || !file) {
                  alert("Please fill in all required fields and select a file.");
                  return;
                }

                // Prepare form data to submit via fetch
                const formData = new FormData();
                formData.append('file', file); // Add the file
                formData.append('post_name', description); // Add description
                formData.append('post_org', organization); // Add issuing organization
                formData.append('post_cred_id', credentialId); // Add credential ID
                formData.append('post_cred_url', credentialUrl); // Add credential URL
                formData.append('start_time', startTime); // Add start time
                formData.append('end_time', endTime); // Add end time
                formData.append('hashtags', selectedTag.textContent); // Send the selected tag as a hashtag
                formData.append('cert_type', cert_type); // Add certificate type
                formData.append('selection', selection); // Add the selected tag name as 'selection'

                console.log("CERT TYPE:", cert_type);
                console.log("SELECTION:", selection);

                try {
                  const response = await fetch('/postsmanage/post/webapp', {
                    method: 'POST',
                    body: formData,
                  });

                  if (response.ok) {
                    const result = await response.json();
                    alert(result.message); // Display success message
                  } else {
                    const error = await response.json();
                    alert(`Error: ${error.message}`);
                  }
                } catch (error) {
                  console.error('Error during file upload:', error);
                  alert('An error occurred while uploading the file.');
                }
              });
